<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_farelay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbg"
    android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@color/header_bgcolor">

        <RelativeLayout
            android:id="@+id/slide_lay"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tool_bar"
            android:layout_alignParentTop="true"
            android:background="@color/tool_bar_color"
            android:padding="10dp">


            <TextView
                android:id="@+id/slideImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/back"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:textColor="@color/button_accept"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/headerTxt"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/my_status"
                android:textColor="@color/white" />


        </RelativeLayout>



    </FrameLayout>

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/shadow"
        android:visibility="visible"
        android:layout_below="@+id/slide_lay"
        android:foreground="@drawable/background_shadow">
        <!-- YOUR STUFF HERE -->
    </FrameLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/lay_fare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/pickuploc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/textviewcolor_light"
                    android:text="@string/Colon" />

                <TextView
                    android:id="@+id/pickuplocTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:singleLine="false" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f7f5f6"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:text="@string/droploc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/Colon" />

                <TextView
                    android:id="@+id/droplocTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:singleLine="false" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/distance_lay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/actual_distance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/Colon" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/actdistanceTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:hint="@string/f_float"
                            android:textColor="@color/textviewcolor_light"
                            android:inputType="none"
                            android:maxLength="8" />

                        <TextView
                            android:id="@+id/metricTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:textColor="@color/textviewcolor_light"
                            android:text="@string/f_km"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />








            <LinearLayout
                android:id="@+id/minutes_lay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/minutes_travel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/Colon" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/min_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:hint="0"
                            android:textColor="@color/textviewcolor_light"
                            android:inputType="none"
                            android:maxLength="15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:textColor="@color/textviewcolor_light"
                            android:text="@string/mins"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f7f5f6"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:text="@string/trip_fare" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/Colon" />

                <TextView
                    android:id="@+id/v_trip_fare"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="left"
                    android:hint="@string/zero" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/idwaitingcost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textviewcolor_light"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/waiting_cost" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/Colon" />

                <TextView
                    android:id="@+id/waitingcost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="left"
                    android:hint="@string/zero" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/eve_fare_lay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f7f5f6"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/even_charge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/Colon" />

                <TextView
                    android:id="@+id/eve_fare"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:hint="@string/zero" />
            </LinearLayout>

            <View
                android:id="@+id/vid_discount"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/discountlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f7f5f6"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/promopercentage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/discount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/Colon" />

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="left"
                    android:hint="@string/zero" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tax_lay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtcmpTax"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/Tax" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/Colon" />

                <TextView
                    android:id="@+id/tax"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="left"
                    android:hint="@string/zero" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/walletlay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:text="@string/wallet_amount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/Colon" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/walletamountTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:hint="@string/zero"
                        android:textColor="@color/textviewcolor_light"
                        android:inputType="numberDecimal"
                        android:maxLength="8"
                        android:paddingRight="3dp"
                        android:text="@string/zero" />

                    <TextView
                        android:id="@+id/walletamountCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/textviewcolor_light"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:text="@string/f_currsymbol" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/round_trip" />

                <TextView
                    android:id="@+id/roundtrip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="@string/zero" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/farecal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/farecalCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/f_currsymbol" />

                    <EditText
                        android:id="@+id/farecalTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:hint="@string/zero"
                        android:inputType="numberDecimal"
                        android:maxLength="8" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/string_tips" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tipsCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:text="@string/f_currsymbol" />

                    <EditText
                        android:id="@+id/tipsTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:hint="@string/zero"
                        android:inputType="numberDecimal"
                        android:maxLength="8"
                        android:paddingRight="5dp"
                        android:text="@string/zero" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f7f5f6"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/textviewcolor_light"
                    android:padding="5dp"
                    android:text="@string/total_amount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/textviewcolor_light"
                    android:text="@string/Colon" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/totalamountTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:hint="@string/zero"
                        android:textColor="@color/textviewcolor_light"
                        android:inputType="numberDecimal"
                        android:maxLength="8"
                        android:paddingRight="3dp"
                        android:text="@string/zero" />

                    <TextView
                        android:id="@+id/toatalamtCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="@color/textviewcolor_light"
                        android:text="@string/f_currsymbol" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:visibility="gone" />



            <LinearLayout
                android:id="@+id/paylay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:text="@string/pay_amount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="@string/Colon" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/amountpayTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:hint="@string/zero"
                        android:textColor="@color/textviewcolor_light"
                        android:inputType="numberDecimal"
                        android:maxLength="8"
                        android:paddingRight="3dp"
                        android:text="@string/zero" />

                    <TextView
                        android:id="@+id/amountpayCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="@color/textviewcolor_light"
                        android:text="@string/f_currsymbol" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/textviewcolor_light"
                    android:gravity="center_vertical"
                    android:text="Local Kilo Meter(g)" />

                <TextView
                    android:id="@+id/remarks"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textviewcolor_light"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:text="@string/paymentby"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/noWallet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/rbtn_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/cash_unfocus"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/cash"
                        android:textColor="@color/textviewcolor_light"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/rbtn_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/credit_card_unfocus"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/card"

                        android:textColor="@color/textviewcolor_light"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/rbtn_uncard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/newcard_unfocus"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/uncard"
                        android:textColor="@color/textviewcolor_light"
                        android:visibility="gone" />

                    <!-- <TextView
                         android:id="@+id/payaccount"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:layout_weight="1"
                         android:drawableTop="@drawable/fare_account"
                         android:gravity="center"
                         android:padding="5dp"
                         android:text="@string/account" />-->


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbtn_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableTop="@drawable/fare_wallet"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="wallet"
                            android:textColor="@color/textviewcolor_light"
                            android:visibility="gone" />

                    </RadioGroup>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#cccccc" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>