                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:text="@string/paymentby"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/noWallet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/rbtn_uncard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/newcard_unfocus"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/uncard"
                        android:textColor="@color/textviewcolor_light"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/rbtn_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/credit_card_unfocus"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/card"

                        android:textColor="@color/textviewcolor_light"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/rbtn_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/cash_unfocus"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/cash"
                        android:textColor="@color/textviewcolor_light"
                        android:visibility="gone" />


                    <!-- <TextView
                         android:id="@+id/payaccount"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:layout_weight="1"
                         android:drawableTop="@drawable/fare_account"
                         android:gravity="center"
                         android:padding="5dp"
                         android:text="@string/account" />-->


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbtn_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableTop="@drawable/fare_wallet"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="wallet"
                            android:textColor="@color/textviewcolor_light"
                            android:visibility="gone" />

                    </RadioGroup>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#cccccc" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

